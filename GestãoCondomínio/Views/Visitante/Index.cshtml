@model List<VisitanteModel>
@{
    ViewData["Title"] = "Visitantes";
}
<div class="text-center">
    <div class="d-grid  gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Visitante" asp-action="Cadastrar"> <i class="fa fa-plus-circle"></i>Novo Visitante</a>
    </div>
    <br />
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert" >
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Fechar ">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Fechar ">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />

    <h1 class="display-4">Listagem de Visitantes</h1>

    <table class="table" id="table-visitantes">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">RG</th>
                <th scope="col">CPF</th>
                <th scope="col">Contato</th>
                <th scope="col"> </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (VisitanteModel visitante in Model)
                {
            <tr>
                <th scope="row">@visitante.Id</th>
                <td>@visitante.Nome</td>
                <td>@visitante.RG</td>
                <td>@visitante.CPF</td>
                <td>@visitante.Contato</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-route-id="@visitante.Id" asp-controller="Visitante" asp-action="Editar"><i class="fa fa-edit"></i></a>
                        <a role="button" class="btn btn-danger" asp-route-id="@visitante.Id" asp-controller="Visitante" asp-action="Apagar"> <i class="fa fa-trash"></i></a>
                    </div>
                </td>
            </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5"> Nenhum visitante encontrado</td></tr>
            }
        </tbody>
    </table>

</div>
