@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<div class="container">
    <div class="row justify-content-center">
        <form role="form" asp-controller="Login" asp-action="Entrar" method="post" class="Form-Container">
            <h2 class="text-center">login</h2>
            <br />
            <fieldset>
                <div class="form-group ls-login-user">
                    @*<label for="userLogin">Usuário</label>*@
                    <input asp-for="Login" class="form-control" id="login" type="text" placeholder="Nome">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>

                <div class="form-group ls-login-password">
                    @*<label for="senha">Senha</label>*@
                    <input asp-for="Senha" class="form-control " id="senha" type="email" placeholder="E-mail">
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>
                <input type="submit" value="Redefinir Senha" class="btn btn-primary btn-lg btn-block">
                <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Login" role="button">Voltar</a>
            </fieldset>
        </form>
    </div>
</div>