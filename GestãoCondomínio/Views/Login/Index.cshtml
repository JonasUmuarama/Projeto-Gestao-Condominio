@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<div class="container">
    <div class="row justify-content-center">
        <form role="form" asp-controller="Login" asp-action="Entrar" method="post" class="Form-Container">
            <h2 class="text-center">login</h2>
            <br />
            <fieldset>
                <div class="form-group ls-login-user">
                    @*<label for="userLogin">Usuário</label>*@
                    <input asp-for="Login" class="form-control" id="login" type="text" placeholder="Usuário">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>

                <div class="form-group ls-login-password">
                    @*<label for="senha">Senha</label>*@
                    <input asp-for="Senha" class="form-control " id="senha" type="password" placeholder="Senha">
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>

                <a href="#" class="ls-login-forgot">Esqueci minha senha</a>
                <br />
                <br />
                <input type="submit" value="Entrar" class="btn btn-primary btn-lg btn-block">
                <br />
                <p class="txt-center ls-login-signup">
                    Não possui um usuário ?
                    <a href="#">Cadastre-se agora</a>
                </p>

            </fieldset>
        </form>
    </div>
</div>