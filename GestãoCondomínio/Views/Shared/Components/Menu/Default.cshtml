@model UsuarioModel

<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h5>Usuário:  @Model.Nome </h5> </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
        </li>
        @if (Model.Perfil == GestãoCondomínio.Enums.PerfilEnum.Admin)
        {
            <li class="nav-item dropdown">
                <a class="nav-link text-light dropdown-toggle " href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Cadastros
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="Index">Usuários</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Veiculo" asp-action="">Veículos</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Morador" asp-action="Index">Moradores</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Visitante" asp-action="Index">Visitantes</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Prestador" asp-action="">Prestadores de Serviços</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Funcionario" asp-action="">Funcionários</a>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Acesso" asp-action="">Acessos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
            </li>

        }

        @if (Model.Perfil == GestãoCondomínio.Enums.PerfilEnum.Funcionario)
        {
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Acesso" asp-action="">Acessos</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
            </li>
        }
        @if (Model.Perfil == GestãoCondomínio.Enums.PerfilEnum.Morador)
        {
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="AcessoMorador" asp-action="">Acessos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
            </li>


        }


    </ul>

</div>