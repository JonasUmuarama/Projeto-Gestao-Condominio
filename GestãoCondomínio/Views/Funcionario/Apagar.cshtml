@model FuncionarioModel
@{
    ViewData["Title"] = "Apagar funcionario";
}

<div class="text-center">
    <h3>Realmente deseja apagar o funcionário (@Model.Nome)?</h3>

</div>

<a class="btn btn-primary" role="button"asp-controller="Funcionario" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger"asp-controller="Funcionario" asp-action="Deletar" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>