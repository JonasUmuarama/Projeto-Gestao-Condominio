@model FuncionarioModel
@{
    ViewData["Title"] = "Editar funcionário";
}
<div class="text-center">

    <h1 class="display-4">Editar funcionário</h1>

</div>

<form asp-controller="Funcionario" asp-action="Editar">
    <input  type="hidden" asp-for="Id"/>
    <div class="Form-Container">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do funcionário">
        @Html.ValidationMessageFor(x => x.Nome)
    
        <label for="Rg">RG</label>
        <input type="text" asp-for="RG" class="form-control" placeholder="Digite o RG do funcionário">
        @Html.ValidationMessageFor(x => x.RG)
   
        <label for="funcao">Função</label>
        <input type="text" asp-for="Funcao" class="form-control" placeholder="Digite a função do funcionário">
        @Html.ValidationMessageFor(x => x.Funcao)
   
        <label for="telefone">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o telefone do funcionário">
        @Html.ValidationMessageFor(x => x.Telefone)
  
        <label for="descricao">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a descrição">
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Editar</button>
    <a class="btn btn-secondary" asp-controller="Funcionario" asp-action="Index" role="button">Voltar</a>
</form>